.UCenter-bg {
  background-image: url(https://endbiyesheji.oss-cn-beijing.aliyuncs.com/weixinxiaochengxu/5bcf3b12966e5b9a95e1e4813db56f3.jpg);
  background-color: #ccc;
  background-position: center;
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}